#!/bin/bash
source env.sh

echo "Scaling k3s cluster to $1 nodes...."
docker-compose --file=$_K3S_DOCKER_COMPOSE up -d --scale node=$1
echo "$1" > $_WORKDIR/k3s_nodes

echo "Hey! If you are scaling down, it is recommended to remove the old nodes manually from k8s context. Like kk delete node <node_id>. Or run reset_k3s"
